---
import { Icon } from "astro-icon/components";
export interface QuantumData {
  icon: string;
  color: keyof typeof bgVariants;
  title: string;
  slug: string;
}
interface Props extends QuantumData {}
const { color, icon, title, slug } = Astro.props;
const bgVariants = {
  blue: "bg-blue-500/10",
  indigo: "bg-indigo-500/10",
  cyan: "bg-cyan-500/10",
  green: "bg-green-500/10",
  slate: "bg-slate-500/10",
  violet: "bg-violet-500/10",
  orange: "bg-orange-500/10",
  yellow: "bg-yellow-500/10",
  purple: "bg-purple-500/10",
  teal: "bg-teal-500/10",
  lime: "bg-lime-500/10",
};

const textVariants = {
  blue: "text-blue-500",
  indigo: "text-indigo-500",
  cyan: "text-cyan-500",
  green: "text-green-500",
  slate: "text-slate-500",
  violet: "text-violet-500",
  orange: "text-orange-500",
  yellow: "text-yellow-500",
  purple: "text-purple-500",
  teal: "text-teal-500",
  lime: "text-lime-500",
};
---

<a href={`/quantum/${slug}`}>
  <div
    class="flex items-center p-1 gap-3 hover:bg-secondary-bg rounded-lg transition-colors"
  >
    <div
      class={`size-10 rounded-lg ${bgVariants[color]} flex items-center justify-center text-2xl`}
    >
      <Icon name={`lucide:${icon}`} class={textVariants[color]} />
    </div>
    <div>{title}</div>
  </div>
</a>
